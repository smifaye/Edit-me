{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon-128.png",
    "default_title": "Edit me"
  },
  "name": "Edit me",
  "description": "Take any page from Citizens Advice, AdviserNet, CABlink or BMIS and put it in edit mode",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.5",
  "manifest_version": 3
}
