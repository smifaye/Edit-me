{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon-128.png",
    "default_title": "Edit me",
    "default_popup": "popup.html"
  },
  "name": "Edit me",
  "description": "Edit content on the Citizens Advice website and show the cabID field",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "version": "0.9.1",
  "manifest_version": 3
}
